<!---background and logo-->
<div id="bg">
  <img src="assets/image1.jpg" alt="fuck">
</div>
<img src="assets/logo.png" id="logo" />

<% if current_user %>
  <section id="user_nav">
    Welcome <%= current_user.name %>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  </section>

  <section id="search-events">
    <%= form_tag("/search", method: "get") do %>
      <%= label_tag(:keyword, "Keyword")%>
      <%= text_field(:search, :keyword, required: true) %>
      <br>
      <%= label_tag(:users, "Friends")%>
      <%= text_field(:search, :users, id:"search_users-typeahead", required: true) %>
      <br>
      <%= label_tag(:timeframe, "Timeframe:") %>
      <%= date_field(:timeframe, :start, required: true) %>
      <%= date_field(:timeframe, :end, required: true) %>
      <%= submit_tag("Search") %>
    <% end %>
  </section>
<% else %>
  <!--blurb-->
  <div id="explanation">
    <div id='inner'>
      <p class="pitch">4 million events,</p>
      <p class="pitch">Hundreds of cities across the world,</p>
      <p class="pitch">Your friends and you.</p>
    </div>
  </div>
  <!--emailform-->
  <div id="emailform">
    <div id="inner">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class => "alert alert-danger" %>
      <% end %>
      <%= form_tag(new_url, :method => :get) do %>
        <div id="city-field" class="field">
          <%= text_field_tag 'city', nil, { required: true, placeholder: "Your City", class: "form-control" } %>
        </div>
        <div id="state-field" class="field">
          <%= select_tag "state", options_for_select(["AL","AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY"]), { required: true, class: "form-control" } %>
        </div>
        <%= button_tag "Sign up with Google", class: "btn btn-success", id: "signupbutton" %>
      <% end %>
    </div>
      <p id="login"><span id="login1"><a href="/auth/google?origin=login" style="color: #FFFFE0">Log in</a></span> now</p>
      </form>
    </div>
  </div>
<% end %>